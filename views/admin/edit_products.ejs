<style>
    label {
        font-weight: 600;
    }

    input {
        font-weight: bold;
    }
</style>
<section>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12 ">
                <h2 class="text-center">Edit products</h2>
                <form action="/admin_panel/products/edit_products/<%= products._id %>" method="post"
                    enctype="multipart/form-data">
                    <label for="">Name</label>
                    <input type="text" name="name" class="form-control" value="<%= products.name %> ">

                    <div class="row">
                        <div class="col-md-6">
                            <label for="">Brand</label>
                            <input type="text" name="brand" class="form-control" value="<%= products.brand  %> ">
                        </div>

                        <div class="col-md-6">
                            <label for="">Category</label>
                            <select name="category" class="form-control w-100 my-0">
                                <option selected disabled hidden><%=products.category%></option>
                                <% category.forEach((element,index)=>{ %>
                                    <option><%= element.categories %></option>
                                <% })%>
                            </select>
                        </div>



                        <div class="col-md-6">
                            <label for="">Quantity</label>
                            <input type="text" name="quantity" class="form-control" value="<%= products.quantity  %> ">
                        </div>

                        <div class="col-md-6">
                            <label for="">Price</label>
                            <input type="tel" name="price" step="0.01" class="form-control price"
                                value="<%= products.price  %> ">
                        </div>


                        <div class="col-md-12 text-area">
                            <label for="">Description</label>
                            <textarea type="text" name="description" style="height:200px;"
                                class="form-control"><%= products.description %></textarea><br>
                        </div>

                        <div class="col-md-2">
                            
                            <label for="">Image1</label>
                            <img id="imgView1" class="img-fluid mb-4" src="/productImages/<%=products._id %>0.jpg" alt=""
                                style="width: 70px; height: 70px; object-fit: contain; border-radius: 4px; border: solid 1px rgba(0, 0, 0, 0.458);">
                                <label for="">Image2</label>
                            <img id="imgView2" class="img-fluid mb-4" src="/productImages/<%=products._id %>1.jpg" alt=""
                                style="width: 70px; height: 70px; object-fit: contain; border-radius: 4px; border: solid 1px rgba(0, 0, 0, 0.458);">
                                <label for="">Image3</label>
                            <img id="imgView3" class="img-fluid mb-4" src="/productImages/<%=products._id %>2.jpg" alt=""
                                style="width: 70px; height: 70px; object-fit: contain; border-radius: 4px; border: solid 1px rgba(0, 0, 0, 0.458);">
                                <label for="">Image4</label>
                            <img id="imgView4" class="img-fluid mb-4" src="/productImages/<%=products._id %>3.jpg" alt=""
                                style="width: 70px; height: 70px; object-fit: contain; border-radius: 4px; border: solid 1px rgba(0, 0, 0, 0.458);">
                        </div>

                        <div class="col-md-8">
                            <label for="">Image1</label>
                            <input type="file" name="Image1" class="form-control" onchange="viewImage(event)"><br>
                            <label for="">Image2</label>
                            <input type="file" name="Image2" class="form-control" onchange="viewImage1(event)"
                                 ><br>
                            <label for="">Image3</label>
                            <input type="file" name="Image3" class="form-control" onchange="viewImage2(event)"
                                ><br>
                            <label for="">Image4</label>
                            <input type="file" name="Image4" class="form-control" onchange="viewImage3(event)"
                                ><br>
                            <button type="submit" class="btn btn-primary mb-4"
                                onclick="return confirm('Are you sure want to edit this product ?')">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<script>

    function viewImage(event) {
        document.getElementById('imgView1').src = URL.createObjectURL(event.target.files[0])
    }
    function viewImage1(event) {
        document.getElementById('imgView2').src = URL.createObjectURL(event.target.files[0])
    }
    function viewImage2(event) {
        document.getElementById('imgView3').src = URL.createObjectURL(event.target.files[0])
    }
    function viewImage3(event) {
        document.getElementById('imgView4').src = URL.createObjectURL(event.target.files[0])
    }

</script>