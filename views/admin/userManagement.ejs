<section>
    <div class="row w-100 ">
        <div class="col-md-2 p-4 mx-5 profile">
            <div class="profileiconMain">
                <img src="/images/admin-profile.png" alt="">
            </div>
            <h4>Admin</h4>
        </div>
        <div class="col-md-9 d-flex align-items-center ">
            <div class="headBar d-flex text-center ">
                <a href="/admin_panel">
                    <h6 class="">Dashboard</h6>
                </a>
                <a href="/admin_panel/products" >
                    <h6 >Product Mangement</h6>
                </a>
                <a href="/admin_panel/category_management" >
                    <h6 >Category Mangement</h6>
                </a>
                <a href="/admin_panel/user_management" >
                    <h6 class="text-info">User Mangement</h6>
                </a>
                <a href="/admin_panel/order_management" >
                    <h6>Orders Mangement</h6>
                </a>
               
            </div>
        </div>
    </div>
    <div class="row line ">

    </div>
    <div class="container-fluid">
        <div class="row ">
            <div class="col-md-12">
                <div class="mainbar">
                    <section id="page-top">
                        <div id="wrapper">
                            <div id="content-wrapper" class="d-flex flex-column">
                                <div id="content">
                                    <div class="container-fluid">
                                        <div class="card shadow mt-5 mb-4" style="border: 5px solid #ebebeb; background-image: url('/images/page-header-bg.jpg');">
    
                                            <div class="card-body mt-4">
                                                <div class="col-3 col-md-3 mx-auto   d-flex justify-content-center">
                                                    <a href="/admin_panel/user_management/add_users"
                                                        class="btn btn-primary addProduct mx-auto">Add Users</a>
                                                </div>
                                                <div class="table-responsive">
                                                    <table class="table table-white table-bordered" id="dataTable"
                                                        width="100%" cellspacing="0">
                                                        <thead>
                                                            <tr>
                                                                <th style="font-weight: bold; color:black"
                                                                    class="text-center">Sl.No</th>
                                                                <th style="font-weight: bold; color:black"
                                                                    class="text-center">First Name</th>
                                                                <th style="font-weight: bold; color:black"
                                                                    class="text-center">Last Name</th>
                                                                <th style="font-weight: bold; color:black"
                                                                    class="text-center">Email</th>
                                                                <th style="font-weight: bold; color:black"
                                                                    class="text-center">Contact No</th>
                                                                <th style="font-weight: bold; color:black"
                                                                    class="text-center">CreatedAt</th>
                                                                <th style="font-weight: bold; color:black"
                                                                    class="text-center">Status</th>
                                                                <th style="font-weight: bold; color:black"
                                                                    class="text-center">Action</th>
                                                         
                                                            </tr>
                                                        </thead>
    
                                                        <tbody>

                                                            <%  const dataToReadable=(date)=>{

                                                                const date_ = new Date(date);
                                                        
                                                                let dd = date_.getDate();
                                                                let mm = date_.getMonth()+1;
                                                                let yyyy = date_.getFullYear();
                                                        
                                                                return `${isNaN(dd)?'00':dd}-${isNaN(mm)?'00':mm}-${isNaN(yyyy)?'0000':yyyy}`;
                                                                }; %>

                                                            <% const status=(data)=>{
                                                                
                                                                if(data == true){
                                                                    return `${'Active'}`
                                                                }else{
                                                                    return `${'Blocked'}`
                                                                }
                                                            }%>
                                                            
                                                            <% users.forEach((element,index)=>{%>
                                                            <tr>
                                                                <td class="text-center" style="border-bottom: 1px solid  #dee0e0"><%= index+1 %> </td>
                                                                <td class="text-center"  style="border-bottom: 1px solid #dee0e0"><%= element.fName %></td>
                                                                <td class="text-center"  style="border-bottom: 1px solid #dee0e0"><%= element.lName %></td>
                                                                <td class="text-center"  style="border-bottom: 1px solid #dee0e0"><%= element.email %></td>
                                                                <td class="text-center"  style="border-bottom: 1px solid #dee0e0"><%= element.contactNo %></td>
                                                                <td class="text-center"  style="border-bottom: 1px solid #dee0e0"><%= dataToReadable(element.createdAt) %></td>
                                                                <td class="text-center text-white" style="background-color: <%= element.status?'rgb(53,200,0)':'rgb(200,0,0)' %>; border-bottom: 1px solid #dee0e0;" id="color"><%= status(element.status) %></td>
                                                                <td class="text-center"  style="border-bottom: 1px solid #dee0e0">

                                                                    <a href="./user_management/edit_user/<%=element._id%>" class="btn me-1 my-2"
                                                                            style="background-color: #005bc5;">Edit</a>
                                                                    <a href="./user_management/block_user/<%=element._id%>" class="btn me-1 my-2" id="btn1"
                                                                        onclick="return confirm('Are you sure want to unblock this user ?')"
                                                                        style="background-color: rgb(200, 0, 0);">Block</a>
                                                                    <a href="./user_management/unblock_user/<%=element._id%>" class="btn" id="btn2"

                                                                    onclick="return confirm('Are you sure want to unblock this user ?')"
                                                                        style="background-color: rgb(53, 200, 0);">Unblock</a>
                                                                </td>
                                                            </tr>
                                                             <%})%>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <a class="scroll-to-top rounded" href="#page-top">
                            <i class="fas fa-angle-up"></i>
                        </a>

                        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">Ã—</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">Select "Logout" below if you are ready to end your current
                                        session.</div>
                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                                        <a class="btn btn-primary" href="login.html">Logout</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>

