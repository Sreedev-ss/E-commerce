<script>

  function toast2() {
    const Toast = Swal.mixin({
      toast: true,
      position: 'bottom',
      iconColor: 'green',
      customClass: {
        popup: 'colored-toast'
      },
      showConfirmButton: false,
      timer: 1500,
      timerProgressBar: true
    })
    Toast.fire({
      icon: 'success',
      title: 'Added to cart'
    })
  }

  function toast() {
    const Toast = Swal.mixin({
      toast: true,
      position: 'middle',
      iconColor: 'red',
      customClass: {
        popup: 'colored-toast'
      },
      showConfirmButton: false,
      timer: 1500,
      timerProgressBar: true
    })
    Toast.fire({
      icon: 'warning',
      title: 'Currently out of stock'
    })
  }


  function addToCart(proId) {
    $.ajax({
      url: '/qtyFind/' + proId,
      method: 'get',
      error: (error) => {
        Swal.fire({
          icon: 'error',
          title: 'Oops...',
          text: error.responseJSON.message,
        })
      },
      success: (response) => {
        console.log(response);
        if (response.proQty - response.cartQty <= 0) {
          toast()
        } else {
          toast2()
          $.ajax({
            url: '/addtoCart/' + proId,
            method: 'get',
            error: (error) => {
              Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: error.responseJSON.message,
              })
            },
            success: (response) => {
              if (response.status) {
                console.log(response.status);
                let count = $('#cart-count').html()
                count = parseInt(count) + 1
                $('#cart-count').html(count)
              }
            }
          })
        }
      }
    })

  }
</script>