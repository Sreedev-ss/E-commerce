<style>
  label {
    font-weight: 600;
  }

  select,
  textarea,
  .addPro {
    border-radius: 0px !important;
    margin-top: 12px !important;
  }

  label {
    margin-bottom: 0px !important;
  }
</style>
<section>
  <div class="container mt-5 ">
    <div class="row">
      <div class="col-md-12 ">
        <div class="card mb-4 p-5">
          <h2 class="text-center mt-5">Edit products</h2>
          <form action="/admin/productManagement/edit-products/<%= products._id %>" enctype="multipart/form-data" method="post">
            <label for="">Name</label>
            <input type="text" name="name" class="form-control addPro" value="<%= products.name %>" required>

            <div class="row">
              <div class="col-md-6">
                <label for="">Brand</label>
                <input type="text" name="brand" class="form-control addPro" value="<%= products.brand  %>" required>
              </div>

              <div class="col-md-6">
                <label for="">Category</label>
                <select name="category" required class="form-control text-secondary w-100 my-2.3">
                  <option hidden><%=products.category%></option>
                  <% category.forEach((element,index)=>{ %>
                  <option><%= element.categories %></option>
                  <% })%>
                </select>
              </div>


              <div class="col-md-6">
                <label for="">Quantity</label>
                <input type="text" name="quantity" value="<%=products.quantity%>" class="form-control addPro" required>
              </div>

              <div class="col-md-6">
                <label for="">Price</label>
                <input type="text" name="price" value="<%= products.price%>" step="0.01" class="form-control addPro price" required>
              </div>

              <div class="col-md-12">
                <label for="">Description</label>
                <textarea type="text" name="description" class="form-control" required><%= products.description %></textarea><br>
              </div>

              <div class="col-md-6 mt-1 mx-2 ">
                <label for="">Image1</label>
                <img id="imgView1" class="img-fluid mb-4 p-2" src="/productImages/<%=products._id %>0.jpg" alt="product image" style="width: 70px; height: 70px; object-fit: contain; border-radius: 4px; border: solid 1px rgba(0, 0, 0, 0.458);">
                <label for="">Image2</label>
                <img id="imgView2" class="img-fluid mb-4 p-2" src="/productImages/<%=products._id %>1.jpg" alt="product image" style="width: 70px; height: 70px; object-fit: contain; border-radius: 4px; border: solid 1px rgba(0, 0, 0, 0.458);">
                <label for="">Image3</label>
                <img id="imgView3" class="img-fluid mb-4 p-2" src="/productImages/<%=products._id %>2.jpg" alt="product image" style="width: 70px; height: 70px; object-fit: contain; border-radius: 4px; border: solid 1px rgba(0, 0, 0, 0.458);">
                <label for="">Image4</label>
                <img id="imgView4" class="img-fluid mb-4 p-2" src="/productImages/<%=products._id %>3.jpg" alt="product image" style="width: 70px; height: 70px; object-fit: contain; border-radius: 4px; border: solid 1px rgba(0, 0, 0, 0.458);">
              </div>
              <div class="row">
                <div class="col-md-6 d-flex justify-content-between p-3">
                  <label for="" class="mt-4 mx-2">Image1</label>
                  <input type="file" name="Image" class="form-control addPro" onchange="viewImage1(event)"><br>
                </div>
                <div class="col-md-6 d-flex justify-content-between p-3">
                  <label for="" class="mt-4 mx-2">Image2</label>
                  <input type="file" name="Image" class="form-control addPro" onchange="viewImage2(event)"><br>
                </div>
                <div class="col-md-6 d-flex justify-content-between p-3">
                  <label for="" class="mt-4 mx-2">Image3</label>
                  <input type="file" name="Image" class="form-control addPro" onchange="viewImage3(event)"><br>
                </div>
                <div class="col-md-6 d-flex justify-content-between p-3">
                  <label for="" class="mt-4 mx-2">Image4</label>
                  <input type="file" name="Image" class="form-control addPro" onchange="viewImage4(event)"><br>

                </div>
                <button type="submit" class="btn btn-primary mt-3" onclick="return confirm('Are you sure want to add this product ?')">Submit</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function viewImage1(event) {
    document.getElementById('imgView1').src = URL.createObjectURL(event.target.files[0])
  }

  function viewImage2(event) {
    document.getElementById('imgView2').src = URL.createObjectURL(event.target.files[0])
  }

  function viewImage3(event) {
    document.getElementById('imgView3').src = URL.createObjectURL(event.target.files[0])
  }

  function viewImage4(event) {
    document.getElementById('imgView4').src = URL.createObjectURL(event.target.files[0])
  }
</script>