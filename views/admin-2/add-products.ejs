<style>
    label {
        font-weight: 600;
        margin-bottom: 0px !important;
    }
    select,textarea,.addPro{
        border-radius: 0px !important;
        margin-top: 12px !important; 
    }

    
</style>
<section>
    <div class="container mt-5 ">
        <div class="row">
            <div class="col-md-12 ">
                <div class="card mb-4 p-5">
                <h2 class="text-center mt-1">Add products</h2>
                <form  action="/admin/productManagement/add_products" enctype="multipart/form-data" method="post">
                    <label for="">Name</label>
                    <input type="text" name="name" class="form-control addPro" required>

                    <div class="row">
                        <div class="col-md-6">
                            <label for="">Brand</label>
                            <input type="text" name="brand" class="form-control addPro" required>
                        </div>

                        <div class="col-md-6">
                            <label for="">Category</label>
                            <select name="category" required class="form-control text-secondary w-100 my-2.3">
                                <option hidden >Select Category</option>
                                <% category.forEach((element,index)=>{ %>
                                    <option><%= element.categories %></option>
                                <% })%>
                            </select>
                            <!-- <input type="text" name="category" class="form-control" required> -->
                        </div>


                        <div class="col-md-6">
                            <label for="">Quantity</label>
                            <input type="text" name="quantity" class="form-control addPro" required>
                        </div>

                        <div class="col-md-6">
                            <label for="">Price</label>
                            <input type="text" name="price" step="0.01" class="form-control addPro price" required>
                        </div>

                        <div class="col-md-12">
                            <label for="">Description</label>
                            <textarea type="text" name="description" class="form-control" required></textarea><br>
                        </div>

                        <div class="col-md-6 mt-1 mx-2 ">
                            <label for="" >Image1</label>
                            <img id="imgView1" class="img-fluid mb-4 p-2" src="/assets/img/4047371.png" alt="product image"
                                style="width: 70px; height: 70px; object-fit: contain; border-radius: 4px; border: solid 1px rgba(0, 0, 0, 0.458);">
                                <label for="">Image2</label>
                            <img id="imgView2" class="img-fluid mb-4 p-2"  src="/assets/img/4047371.png" alt="product image"
                                style="width: 70px; height: 70px; object-fit: contain; border-radius: 4px; border: solid 1px rgba(0, 0, 0, 0.458);">
                                <label for="">Image3</label>
                            <img id="imgView3" class="img-fluid mb-4 p-2"  src="/assets/img/4047371.png" alt="product image"
                                style="width: 70px; height: 70px; object-fit: contain; border-radius: 4px; border: solid 1px rgba(0, 0, 0, 0.458);">
                                <label for="">Image4</label>
                            <img id="imgView4" class="img-fluid mb-4 p-2"  src="/assets/img/4047371.png" alt="product image"
                                style="width: 70px; height: 70px; object-fit: contain; border-radius: 4px; border: solid 1px rgba(0, 0, 0, 0.458);">
                        </div>
                        <div class="row">
                        <div class="col-md-6 d-flex justify-content-between p-3">
                            <label for="" class="mt-4 mx-2">Image1</label>
                            <input type="file" name="Image" class="form-control addPro" onchange="viewImage1(event)"
                                required ><br>
                            </div>
                            <div class="col-md-6 d-flex justify-content-between p-3">
                                <label for="" class="mt-4 mx-2">Image2</label>
                            <input type="file" name="Image" class="form-control addPro" onchange="viewImage2(event)"
                                required ><br>
                            </div>
                                <div class="col-md-6 d-flex justify-content-between p-3">
                                    <label for="" class="mt-4 mx-2">Image3</label>
                            <input type="file" name="Image" class="form-control addPro" onchange="viewImage3(event)"
                                required ><br>
                            </div>
                            <div class="col-md-6 d-flex justify-content-between p-3">
                                <label for="" class="mt-4 mx-2">Image4</label>
                            <input type="file" name="Image" class="form-control addPro" onchange="viewImage4(event)"
                                required ><br>
                           
                        </div>
                        <button type="submit" class="btn btn-primary mt-3"
                        onclick="return confirm('Are you sure want to add this product ?')">Submit</button>
                    </div>
                    </div>
                </form>
            </div>
            </div>
        </div>
    </div>
</section>

<script>

    function viewImage1(event) {
        document.getElementById('imgView1').src = URL.createObjectURL(event.target.files[0])
    }
    function viewImage2(event) {
        document.getElementById('imgView2').src = URL.createObjectURL(event.target.files[0])
    }
    function viewImage3(event) {
        document.getElementById('imgView3').src = URL.createObjectURL(event.target.files[0])
    }
    function viewImage4(event) {
        document.getElementById('imgView4').src = URL.createObjectURL(event.target.files[0])
    }

</script>